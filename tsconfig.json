{   
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "moduleResolution": "node",
        "declaration": true ,
        "incremental": true,
        "types": ["jest", "node"],
        "esModuleInterop": true,
        "target": "ES2019",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUncheckedIndexedAccess": true,
        "alwaysStrict": true,
        "strictNullChecks": true
    },
    "include": [
        "src/index.ts"
    ]
}